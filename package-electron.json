{
  "name": "sistema-gestion-bebidas",
  "version": "1.0.0",
  "description": "Sistema Integral de Gestión de Bebidas",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.empresa.sistemabebidas",
    "productName": "Sistema Gestión Bebidas",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app.js",
      "server.js",
      "package.json",
      "node_modules/**/*",
      "*.html",
      "*.css",
      "*.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sistema Gestión Bebidas"
    }
  },
  "author": "Ricardo Ugarte",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "mssql": "^12.1.0"
  }
}